<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.Base.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/CActionBar</item>
        <item name="android:spinnerDropDownItemStyle">@style/CSpinnerItem</item>
        <item name="android:actionDropDownStyle">@style/myapp_DropDownNav</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/CActionBar</item>
        <item name="spinnerDropDownItemStyle">@style/CSpinnerItem</item>
        <item name="actionDropDownStyle">@style/myapp_DropDownNav</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:backgroundSplit">@color/actionbar_split_background</item>
        <item name="android:titleTextStyle">@style/CActionBarTitleText</item>


        <!-- Support library compatibility -->
        <item name="background">@color/actionbar_background</item>
        <item name="backgroundSplit">@color/actionbar_split_background</item>
        <item name="titleTextStyle">@style/CActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="CActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="myapp_DropDownNav" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <!--<item name="background">@color/actionbar_background</item>
        <item name="android:background">@color/actionbar_background</item>-->
        <item name="android:popupBackground">@color/actionbar_background</item>
        <!--<item name="android:dropDownSelector">@color/actionbar_background</item>-->
    </style>

    <!-- Spinner style -->
    <style name="CSpinnerItem" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/CSpinnerItemText</item>
        <!--<item name="android:background">@color/actionbar_background</item>-->

        <!-- Support library compatibility -->
        <!--<item name="textAppearance">@style/CSpinnerItemText</item>-->
    </style>

    <!-- Spinner text style -->
    <style name="CSpinnerItemText" parent="@style/TextAppearance.AppCompat.Widget.DropDownItem">
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>
